{
  "extends": "@stoplight/scripts/tsconfig.json",
  "include": ["./cypress"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "lib": ["es2021", "dom"],
    "target": "es2018",
    "paths": {
      "@jpmorganchase/elemental": ["./elements/src"],
      "@jpmorganchase/elemental/*": ["./elements/src/*"],
      "@jpmorganchase/elemental-dev-portal": ["./elements-dev-portal/src"],
      "@jpmorganchase/elemental-dev-portal/*": ["./elements-dev-portal/src/*"],
      "@jpmorganchase/elemental-core": ["./elements-core/src"],
      "@jpmorganchase/elemental-core/*": ["./elements-core/src/*"]
    }
  }
}
